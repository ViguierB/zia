{
	"listen": [
		8080,
		4433
	],
	"server": [
		{
			"host": "localhost",
			"port": 8080,
			"path": "def/",
			"exts": [
				".test",
				".txt",
				".php"
			]
		},
		{
			"host": "secure.localhost",
			"port": 4433,
			"path": "def/",
			"ssl": {
				"certificate": "cert/server.pem",
				"private-key": "cert/server.pem"
			},
			"exts": [
				".test",
				".txt",
				".php"
			]
		},
		{
			"host": "reverse.localhost",
			"port": 8080,
			"reverse-proxy": {
				"host": "www.google.com",
				"port": 80,
				"scheme": "http"
			}
		},
		{
			"host": "test.reverse.localhost",
			"port": 8080,
			"reverse-proxy": {
				"host": "localhost",
				"port": 8888,
				"scheme": "http"
			}
		}
	]
}