{
	"listen": [
		8080,
		4433
	],
	"server": [
		{
			"host": "localhost",
			"port": 8080,
			"path": "def/",
			"mime": [
				[ ".test", "text/plain" ],
				[ ".txt", "text/plain" ],
				[ ".png", "image/png" ]
			]
		},
		{
			"host": "secure.localhost",
			"port": 4433,
			"path": "def/",
			"ssl": {
				"certificate": "cert/server.pem",
				"private-key": "cert/server.pem"
			},
			"mime": [
				[ ".test", "text/plain" ],
				[ ".txt", "text/plain" ]
			]
		},
		{
			"host": "reverse.localhost",
			"port": 8080,
			"reverse-proxy": {
				"host": "localhost",
				"port": 8090,
				"scheme": "http"
			}
		},
		{
			"host": "secure.reverse.localhost",
			"port": 4433,
			"rewrite": [
				{
					"if": [
						{
							"path": "/salut.html"
						}
					],
					"var": [
						"salut"
					],
					"set": [
						{
							"host": "$salut"
						}
					],
					"rule": "/admin.php?param1=$salut"
				},
				{

				}
			],
			"ssl": {
				"certificate": "cert/server.pem",
				"private-key": "cert/server.pem"
			},
			"reverse-proxy": {
				"host": "localhost",
				"port": 8090,
				"scheme": "http"
			}
		},
		{
			"host": "holidev.localhost",
			"port": 8080,
			"reverse-proxy": {
				"host": "www.holidev.com",
				"port": 443,
				"scheme": "https"
			}
		},
		{
			"host": "test.reverse.localhost",
			"port": 8080,
			"reverse-proxy": {
				"host": "localhost",
				"port": 8888,
				"scheme": "http"
			}
		}
	]
}